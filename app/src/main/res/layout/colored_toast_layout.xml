<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#B5ACAC"
    android:padding="10dp">

    <TextView
        android:id="@+id/toast_msg"
        app:layout_constraintTop_toTopOf="@id/layout"
        app:layout_constraintLeft_toRightOf="@id/toast_icn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a Message"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="26dp" />

    <ImageView
        android:id="@+id/toast_icn"
        android:layout_width="42dp"
        android:layout_height="23dp"
        android:src="@drawable/icon_sms"
        app:layout_constraintEnd_toStartOf="@+id/toast_msg"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="@id/toast_msg"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>